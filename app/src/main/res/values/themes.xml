<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WordBook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/primaryLightColor</item>
        <item name="colorOnSecondary">@color/primaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/defaultThemeColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:colorBackground">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <!-- BottomAppBar -->
        <item name="bottomAppBarStyle">@style/Theme.WordBook.BottomAppBar</item>
        <!-- BottomNav/Sheet -->
        <item name="navigationViewStyle">@style/Theme.WordBook.NavigationView</item>
        <!-- Dialog -->
        <item name="materialAlertDialogTheme">@style/Theme.WordBook.Dialog</item>
        <item name="materialAlertDialogTitleTextStyle">@style/Theme.WordBook.Dialog.Title</item>
        <!-- Context menu/popup -->
        <item name="popupTheme">@style/Theme.WordBook.Popup</item>
        <!-- Radio Button -->
        <item name="radioButtonStyle">@style/Theme.WordBook.RadioButton</item>
        <!--Snackbar-->
        <item name="snackbarStyle">@style/Theme.WordBook.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Theme.WordBook.SnackbarButton</item>
        <item name="snackbarTextViewStyle">@style/Theme.WordBook.SnackbarTextView</item>
    </style>

    <style name="Theme.WordBook.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.WordBook.BottomAppBar</item>
    </style>

    <style name="ThemeOverlay.WordBook.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnSurface">@color/defaultThemeColor</item>
        <item name="colorSurface">@color/defaultThemeColor</item>
        <item name="colorControlNormal">@color/primaryColor</item>
    </style>

    <style name="Theme.WordBook.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemIconTint">@color/primaryColor</item>
        <item name="itemTextColor">@color/negativeDefaultThemeColor</item>
        <item name="itemShapeFillColor">@color/defaultThemeColor</item>
        <item name="android:background">@color/defaultThemeColor</item>
    </style>

    <style name="Theme.WordBook.Dialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/defaultThemeColor</item>
        <item name="buttonBarNegativeButtonStyle">@style/Theme.WordBook.Dialog.NegativeButton</item>
    </style>

    <style name="Theme.WordBook.Dialog.NegativeButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="android:alpha">1</item>
    </style>

    <style name="Theme.WordBook.Dialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/defaultThemeColor</item>
    </style>

    <style name="Theme.WordBook.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.WordBook.Popup" parent="Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="Theme.WordBook.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.WordBook.RadioButton</item>
    </style>

    <style name="ThemeOverlay.WordBook.RadioButton" parent="">
        <item name="colorOnSurface">@color/primaryColor</item>
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="buttonTint">@color/primaryColor</item>
    </style>

    <style name="Theme.WordBook.ExtendedFAB.Inverted" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="materialThemeOverlay">@style/ThemeOverlay.WordBook.FloatingActionButton.Inverted</item>
    </style>

    <style name="ThemeOverlay.WordBook.FloatingActionButton.Inverted" parent="">
        <item name="colorSecondary">@color/defaultThemeColor</item>
        <item name="colorOnSecondary">@color/primaryColor</item>
        <item name="colorOnSurface">@color/primaryColor</item>
    </style>

    <style name="Theme.WordBook.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.WordBook.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="Theme.WordBook.SnackbarTextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/negativeDefaultThemeColor</item>
    </style>

    <style name="Theme.WordBook.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="ThemeOverlay.WordBook.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="colorOnSurface">@color/defaultThemeColor</item>
    </style>
</resources>